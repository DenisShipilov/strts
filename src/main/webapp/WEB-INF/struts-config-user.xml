<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="userForm" type="actions.user.form.UserForm" />
	</form-beans>

	<action-mappings>
		<action path="/getall" type="actions.user.action.GetallAction">
			<forward name="success" path="/pages/all.jsp" />
		</action>
		<action path="/login" type="actions.user.action.LoginAction">
			<forward name="success" path="/pages/login.jsp" />
		</action>
		<action path="/register" type="actions.user.action.RegisterUserAction"
			name="userForm">
			<forward name="success" path="/pages/regresult.jsp" />
		</action>
        <!-- actions for crud -->
        <action path="/Edituser" type="actions.user.action.EditUserAction" name="userForm">
            <forward name="success" path="/pages/Edituser.jsp"></forward>
            <forward name="falure" path="/pages/Edituser.jsp"></forward>
        </action>
        <action path="/Adduser" type="actions.user.action.AddUserAction" name="userForm">
            <forward name="success" path="/pages/user.jsp" />
        </action>

    </action-mappings>

    <message-resources parameter="actions.user.action.package" />
</struts-config>