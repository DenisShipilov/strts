<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
   <formset>
      <form name="orderform">
         <field property="username" depends="required,maxlength,minlength,mask">
         
         	<msg name="required" key="order.username.required" />
			<msg name="maxlength" key="order.error.username.format" />
			<msg name="minlength" key="order.error.username.length" />
			<msg name="mask" key="order.error.username.format" />

			<arg name="maxlength" key="${var:minlength}" position="0" resource="false"/>
            <arg name="maxlength" key="${var:maxlength}" position="1" resource="false"/>

			<arg name="minlength" key="${var:minlength}" position="0" resource="false"/>
            <arg name="minlength" key="${var:maxlength}" position="1" resource="false"/>
            
            <var>
            	<var-name>minlength</var-name>
				<var-value>3</var-value>
			</var>		
			<var>
				<var-name>maxlength</var-name>
				<var-value>8</var-value>
			</var>
            
            <var>
				<var-name>mask</var-name>
				<var-value>^[a-zA-Z0-9-_]*$</var-value>
			</var>
			
         </field>
         
         <field property="ordernumber" depends="required,maxlength,minlength,mask">
         
         	<msg name="required" key="order.ordernumber.required" />
			<msg name="maxlength" key="order.error.ordernumber.length" />
			<msg name="minlength" key="order.error.ordernumber.length" />
			<msg name="mask" key="order.error.ordernumber.format" />

			<arg name="maxlength" key="${var:minlength}" position="0" resource="false"/>
            <arg name="maxlength" key="${var:maxlength}" position="1" resource="false"/>

			<arg name="minlength" key="${var:minlength}" position="0" resource="false"/>
            <arg name="minlength" key="${var:maxlength}" position="1" resource="false"/>
            
            <var>
            	<var-name>minlength</var-name>
				<var-value>7</var-value>
			</var>		
			<var>
				<var-name>maxlength</var-name>
				<var-value>15</var-value>
			</var>
            
            <var>
				<var-name>mask</var-name>
				<var-value>^[\d]+$</var-value>
			</var>
			
         </field>

          <field property="registrationdate" depends="validwhen,date">
              <msg key="order.registrationdate.required" name="required" />
              <msg key="order.error.registrationdate.format" name="mask" />
              <msg key="order.error.registrationdate.biggerthen" name="validwhen" />
              <var>
                  <var-name>datePatternStrict</var-name>
                  <var-value>dd/mm/yyyy</var-value>
              </var>
            </field>

          <field property="expiredate" depends="validwhen,date">
              <msg key="order.expiredate.required" name="required" />
              <msg key="order.error.expiredate.format" name="mask" />
              <msg key="order.error.expiredate.lessthen" name="validwhen" />
              <var>
                  <var-name>datePatternStrict</var-name>
                  <var-value>dd/mm/yyyy</var-value>
              </var>
              <var>
                  <var-name>test</var-name>
                  <var-value>
                      ((expiredate > registrationdate) and (*this* != null))
                  </var-value>
              </var>
          </field>

          <field property="useremail" depends="required,email">
              <msg key="error.user.email.format" name="email" />
              <msg key="error.user.email.required" name="required" />

          </field>

          <field property="userid" depends="required,minlength,maxlength" >
              <msg key="order.error.userid.required" name="required" />
              <msg key="order.error.userid.length" name="minlength"/>
              <msg key="order.error.userid.length" name="maxlength"/>
          </field>
          
          <field property="bill" depends="required,minlength,maxlength" >
              <msg key="order.error.bill.required" name="required" />
              <msg key="order.error.ordernumber.length" name="maxlength" />
              <msg key="order.error.ordernumber.length" name="minlength" />
          </field>
		
     </form>
  </formset>
</form-validation>